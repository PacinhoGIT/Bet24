<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="32dp"
        android:id="@+id/textView13" />

    <TextView
        android:text="@string/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="25dp"
        android:id="@+id/textView17" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignEnd="@+id/countWinTV"
        android:textAlignment="textStart"
        android:id="@+id/moneyWinTV"
        android:textColor="@android:color/holo_green_dark"
        android:layout_alignStart="@+id/countWinTV" />

    <TextView
        android:text="@string/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="30dp"
        android:id="@+id/textView23" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/textView23"
        android:id="@+id/countLoseTV"
        android:layout_alignStart="@+id/countWinTV"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_marginTop="17dp"
        android:id="@+id/textView25" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moneyLoseTV"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBaseline="@+id/textView25"
        android:layout_alignBottom="@+id/textView25"
        android:layout_alignStart="@+id/countLoseTV"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:id="@+id/countWinTV"
        android:layout_above="@+id/textView17"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="@string/win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:textSize="22dp"
        android:id="@+id/textView8"
        android:textColor="@android:color/holo_green_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/lose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/textView22"
        android:textSize="22dp"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />



</RelativeLayout>