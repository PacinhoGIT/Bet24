<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/macthesListView"
        android:layout_below="@+id/matchNameShowMatchesTV"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="@string/away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/awayCourseTV"
        android:layout_marginEnd="14dp"
        android:layout_alignBaseline="@+id/drawCourseTV"
        android:layout_alignBottom="@+id/drawCourseTV"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawCourseTV"
        android:layout_marginEnd="29dp"
        android:layout_alignBaseline="@+id/homeCoureTV"
        android:layout_alignBottom="@+id/homeCoureTV"
        android:layout_toStartOf="@+id/awayCourseTV" />

    <TextView
        android:text="@string/match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="29dp"
        android:id="@+id/matchNameShowMatchesTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/homeCoureTV" />

    <TextView
        android:text="@string/course"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/coureNameTV"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/homeCoureTV"
        android:layout_alignEnd="@+id/awayCourseTV" />

    <TextView
        android:text="@string/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeCoureTV"
        android:layout_marginEnd="27dp"
        android:layout_above="@+id/macthesListView"
        android:layout_toStartOf="@+id/drawCourseTV" />

</RelativeLayout>