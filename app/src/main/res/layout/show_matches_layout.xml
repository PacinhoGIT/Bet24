<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/awayCourseTV"
        android:layout_marginEnd="14dp"
        android:layout_alignBaseline="@+id/drawCourseTV"
        android:layout_alignBottom="@+id/drawCourseTV"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/macthesListView"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/coureNameTV"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/course"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/coureNameTV"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawCourseTV"
        android:layout_alignBaseline="@+id/homeCoureTV"
        android:layout_alignBottom="@+id/homeCoureTV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeCoureTV"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/coureNameTV"
        android:layout_alignParentStart="true" />

</RelativeLayout>