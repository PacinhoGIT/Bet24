<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/team"
        android:id="@+id/teamALogo_howMatches"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/teamALogo_howMatches"
        android:layout_toEndOf="@+id/teamALogo_howMatches"
        android:layout_marginStart="14dp"
        android:id="@+id/teamAName_showMatches"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/course_a_tv"
        android:textColor="@android:color/holo_red_dark"
        android:layout_toEndOf="@+id/course_a_tv"
        android:layout_marginStart="26dp"
        android:id="@+id/course_x_tv" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/course_b_tv"
        android:layout_alignBaseline="@+id/course_x_tv"
        android:layout_alignBottom="@+id/course_x_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:id="@+id/course_a_tv"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/teamAName_showMatches"
        android:layout_toEndOf="@+id/teamAName_showMatches" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/teamBLogo_showMatches"
        android:layout_alignStart="@+id/teamAName_showMatches"
        android:id="@+id/teamBName_show_matches"
        android:layout_alignTop="@+id/teamBLogo_showMatches" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/team"
        android:layout_marginTop="22dp"
        android:id="@+id/teamBLogo_showMatches"
        android:layout_below="@+id/course_a_tv"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="VS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/teamAName_showMatches"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/course_a_tv"
        android:textAlignment="center" />

</RelativeLayout>