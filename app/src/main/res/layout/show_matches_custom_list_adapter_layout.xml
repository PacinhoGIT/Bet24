<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/team"
        android:id="@+id/teamALogo_howMatches"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/team"
        android:id="@+id/teamBLogo_showMatches"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_a_tv"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/teamALogo_howMatches"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/teamAName_showMatches" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/course_x_tv"
        android:layout_alignBaseline="@+id/course_a_tv"
        android:layout_alignBottom="@+id/course_a_tv"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/course_b_tv"
        android:layout_alignBaseline="@+id/course_x_tv"
        android:layout_alignBottom="@+id/course_x_tv"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:singleLine="false"
        android:lines="2"
        android:maxLines="2"
        android:textAlignment="center"
        android:layout_marginStart="19dp"
        android:id="@+id/teamAName_showMatches"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/teamALogo_howMatches" />

    <TextView
        android:text="VS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/teamAName_showMatches"
        android:layout_alignBottom="@+id/teamAName_showMatches"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAlignment="center"
        android:singleLine="false"
        android:lines="2"
        android:maxLines="2"
        android:id="@+id/teamBName_show_matches"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/course_x_tv"
        android:layout_marginStart="8dp" />

</RelativeLayout>