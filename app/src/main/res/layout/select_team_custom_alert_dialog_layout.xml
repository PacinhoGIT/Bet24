<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/liga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/textView19"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView24" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ligaSpinner"
        android:background="@android:drawable/spinner_background"
        android:popupBackground="@android:drawable/spinner_background"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView24"
        android:layout_marginStart="34dp" />

    <TextView
        android:text="@string/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:id="@+id/textView24"
        android:layout_below="@+id/ligaSpinner"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teamSpinner"
        android:background="@android:drawable/spinner_background"
        android:popupBackground="@android:drawable/spinner_background"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/ligaSpinner"
        android:layout_alignStart="@+id/ligaSpinner" />
</RelativeLayout>