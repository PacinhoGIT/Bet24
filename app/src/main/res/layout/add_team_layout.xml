<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/teamNameTV"
        android:layout_toEndOf="@+id/teamNameTV"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="31dp"
        android:id="@+id/teamNameED" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/formRatingSB"
        android:max="10"
        android:progress="1"
        android:layout_alignBottom="@+id/formRatingTV"
        android:layout_alignStart="@+id/teamRatingSB"
        android:layout_alignEnd="@+id/teamRatingSB" />

    <Button
        android:text="@string/selectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoBtn"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/logoTV"
        android:layout_alignStart="@+id/teamNameED" />

    <TextView
        android:text="@string/logo"
        android:layout_width="wrap_content"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/logoTV"
        android:layout_below="@+id/teamNameED"
        android:layout_marginTop="19dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/teamNameED" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:id="@+id/teamRatingSB"
        android:max="10"
        android:progress="1"
        android:layout_alignTop="@+id/teamRatingTV"
        android:layout_alignStart="@+id/logoBtn"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:layout_alignTop="@+id/logoBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp" />

    <TextView
        android:text="@string/teamRaring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/teamRatingTV"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/ligaSpinnerAddTeam"
        android:layout_marginTop="17dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/ligaAddTeamTV" />

    <TextView
        android:text="@string/teamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teamNameTV"

        android:textAlignment="center"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/teamNameED"
        android:layout_alignBottom="@+id/teamNameED"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/formRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/formRatingTV"
        android:textAlignment="center"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/teamValueTV"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/teamRatingTV" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ligaSpinnerAddTeam"
        android:background="@android:drawable/spinner_background"
        android:popupBackground="@android:drawable/spinner_background"
        android:layout_below="@+id/logoBtn"
        android:layout_alignStart="@+id/logoBtn"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="@string/liga"
        android:layout_width="wrap_content"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/ligaAddTeamTV"
        android:textAlignment="center"
        android:layout_alignTop="@+id/ligaSpinnerAddTeam"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_alignEnd="@+id/logoTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:textAlignment="textStart"
        android:id="@+id/teamValueTV"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="1"
        android:layout_below="@+id/teamRatingTV"
        android:layout_alignEnd="@+id/logoBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:id="@+id/formValueTV"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="1"
        android:layout_below="@+id/formRatingSB"
        android:layout_alignStart="@+id/teamValueTV" />

    <Button
        android:text="@string/addTeamBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addTeamBTN"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/formValueTV"
        android:layout_centerHorizontal="true" />

</RelativeLayout>