<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeRBG"
        android:orientation="horizontal"
        android:layout_below="@+id/awayCourseDetailTV"
        android:layout_marginTop="13dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeRadioBtn"
            android:layout_weight="0.95" />

        <RadioButton
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/drawRadioBtn"
            android:layout_weight="1" />

        <RadioButton
            android:text="B"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/awayRadioBtn"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showDateDetail"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/showNameDetail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/awayCourseDetailTV"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBaseline="@+id/drawCourseDetailTV"
        android:layout_alignBottom="@+id/drawCourseDetailTV"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawCourseDetailTV"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBaseline="@+id/homeCourseDetailTV"
        android:layout_alignBottom="@+id/homeCourseDetailTV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:id="@+id/showNameDetail"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp"
        android:id="@+id/homeCourseDetailTV"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/showDateDetail"
        android:layout_alignParentStart="true" />


</RelativeLayout>