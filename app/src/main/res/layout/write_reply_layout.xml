<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:singleLine="false"
        android:lines="20"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:minLines="5"
        android:gravity="center"
        android:hint="Reply message "
        android:layout_marginTop="75dp"
        android:id="@+id/textReplyED"
        android:layout_below="@+id/showTextReply"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:id="@+id/raportTextReply"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/showRaportContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showTextReply"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/raportTextReply"
        android:layout_centerHorizontal="true" />
</RelativeLayout>