<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nameOfCouponET"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/currentMatchesLV" />

    <TextView
        android:text="@string/currentMatches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="50dp"
        android:id="@+id/currentMatchesTV"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/nameOfCouponET"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/addCouponBtn"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:layout_marginRight="200dp"
        android:id="@+id/nameOfCouponET"
        android:layout_alignBaseline="@+id/nameOfCoupon"
        android:layout_alignBottom="@+id/nameOfCoupon"
        android:layout_marginStart="39dp"
        android:layout_toStartOf="@+id/addCouponBtn" />

    <Button
        android:text="@string/betInCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:id="@+id/showBetsInCouponBTN"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/nameOfCoupon" />

    <Button
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveCouponBTN"
        android:layout_alignBaseline="@+id/showBetsInCouponBTN"
        android:layout_alignBottom="@+id/showBetsInCouponBTN"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp" />

    <Button
        android:text="@string/addTeamBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addCouponBtn"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/nameOfCoupon"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moneyTV"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/addCouponBtn"
        android:layout_alignEnd="@+id/nameOfCoupon" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/nameOfCouponET"
        android:layout_alignStart="@+id/nameOfCouponET"
        android:id="@+id/moneyET"
        android:layout_toStartOf="@+id/addCouponBtn" />

    <TextView
        android:text="@string/nameOfCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:id="@+id/nameOfCoupon"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorPrimaryDark"

        android:layout_alignParentStart="true" />

</RelativeLayout>